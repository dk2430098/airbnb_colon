<% layout('/layouts/boilerplate') %>
<body>
    <br><br>
   <div class="row">
    <div class="col-8 offset-2">
        <h3>Create a New Listing</h3>
        <form action="/listings" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" placeholder="Add a catchy title" id="title" class="form-control" required />
            </div>
           
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" id="description" class="form-control"></textarea>
            </div>
           
            <div class="mb-3">
                <label for="image" class="form-label">Image Link</label>
                <input type="text" name="listing[image]" placeholder="enter image url/link" id="image" class="form-control">
            </div>
            
            <div class="row mb-3">
                <div class="col-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" placeholder="1200" id="price" class="form-control" required />
                </div>
                
                <div class="col-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" placeholder="India" id="country" class="form-control">
                </div>
            </div>
            
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" placeholder="Jaipur, Rajasthan" id="location" class="form-control">
            </div>
            <br><br>
            <button class="btn btn-dark add-btn">Add</button>
        </form>
    <br><br>
    </div>
   </div>
</body>
