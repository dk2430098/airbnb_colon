      <!-- Search -->
      <form action="/listings" method="GET" class="relative">
        <input type="text" name="search" placeholder="Search..."
          class="w-full pl-4 pr-10 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary outline-none text-sm">
